<div id="classroom-form">
	<% form_remote_for([school,classroom]) do |f| %>
	  <%= f.error_messages %>
	  <%= hidden_field :classroom, :school_id %>
	  <p><%= label_tag :name, "Designation"%> <%= f.text_field :name %></p>
	  <p><%= label_tag :grade, "Grade"%>  <%= f.select :grade, classroom.grades %></p>
	  <p><%= label_tag :year, "Year"%> <%= f.select :year,(Date.today().year()+1).downto(Date.today().year()-5)  %></p>
	  <p>
	    <%= f.submit 'Create' %>
	  </p>
	<% end %>
</div>