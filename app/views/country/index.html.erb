<h1>Country Organization</h1>
<div style="clear:all"></div>

<div>

	<div id="layout-column-left">
		<% rounded_titled_box "Sectors",:id=>'sector' do |b| %>
			<ul class="object-tools">
				<li><%= link_to "Add Sector",{:controller=>"country",:action=>"new_sector"}, :class=>"addlink" %></li>
			</ul>
			<%  if not @sectors.blank? %>
				<table>
					<tr>
						<th>Province</th>
						<th>District</th>
						<th>Sector</th>
					</tr>
					<tbody>
						<% for sector in @sectors %>
						<tr>
							<td><%= sector.district.province.name %></td>
							<td><%= sector.district.name %></td>
							<td><%= sector.name %></td>
						</tr>
						<%end%>
					</tbody>
				</table>
			<% else %>	
				<%= yeld_error "Couldn't find any sectors. You need to seed you database through %rake db:seed" %>
			<%end%>
		<%end%>
	</div>
	
	<div id="layout-column-right">
		
		<% rounded_titled_box "Provinces",:id=>'provinces' do |b| %>
			<%  if not @provinces.blank? %>
					<ul>
					<% for province in @provinces %>
						<li><%= province.name %></li>
					<%end%>
					</ul>
			<% else %>	
				<%= yeld_error "Couldn't find any Province. You need to seed you database through %rake db:seed" %>
			<%end%>
		<%end%>
		
		<% rounded_titled_box "Districts",:id=>'districts' do |b| %>
			<%  if not @districts.blank? %>
					<ul>
					<% for district in @districts %>
						<li><%= district.name %></li>
					<%end%>
					</ul>
			<% else %>	
				<%= yeld_error "Couldn't find any District. You need to seed you database through %rake db:seed" %>
			<%end%>
		<%end%>
		
	</div>

</div>